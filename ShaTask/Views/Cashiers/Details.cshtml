@model ShaTask.Models.Cashier

@{
    ViewData["Title"] = "Details";
}

<br />
<h1>Cashier Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>Cashier ID</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class = "col-sm-2">
            <span>Cashier Name</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CashierName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Branch)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Branch.BranchName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>
